<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- Toolbar с кнопкой назад и названием фильма -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#0E3165"
            app:navigationIcon="@drawable/vector"
            app:titleTextColor="@android:color/white" />

        <!-- Изображение фильма -->
        <ImageView
            android:id="@+id/filmImage"
            android:layout_width="132dp"
            android:layout_height="201dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:paddingTop="16dp"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:background="@drawable/rounded_corner_4dp" />

        <!-- Локализованное название -->
        <TextView
            android:id="@+id/localizedTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:fontFamily="@font/roboto_bold"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:text="Локализованное название"
            android:textColor="@color/black"/>

        <!-- Жанры и год -->
        <TextView
            android:id="@+id/genresYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#4B4B4B"
            android:fontFamily="@font/roboto_regular"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="4dp"
            android:text="Жанры, 2025 год" />

        <!-- Рейтинг -->
        <TextView
            android:id="@+id/ratingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#0E3165"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="4dp"
            android:fontFamily="@font/roboto_bold"
            android:text="8.5 КиноПоиск"/>

        <!-- Описание -->
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_regular"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:text="Описание фильма"
            android:textColor="@color/black"/>
    </LinearLayout>
</ScrollView>
